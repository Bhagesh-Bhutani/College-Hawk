<link rel="stylesheet" href = "/css/temperature.css">

<main>
    <h2>Hi <%= user.name %>!</h2>
    <div class = 'row'>
        <div class = 'col s0 m1 l2 xl3'>

        </div>

        <form action = '/temperature/<%= user._id %>' method = "POST" class = 'col s12 m10 l8 xl6'>
            <div class = "input-field">
                <input id = "temperature" name = "temperature" class = "white-text" type = "number" class = "validate" step = "0.01" required>
                <label for = "temperature">Body Temperature(In Celsius)</label>
            </div>

            <input name = "id" type = "text" value = "<%= user._id %>" style = "visibility: hidden;">

            <button class="btn waves-effect waves-light" type = "submit" name = "action">Submit
                <i class="fa fa-paper-plane" aria-hidden="true"></i>
            </button>
        </form>

        <div class = 'col s0 m1 l2 xl3'>

        </div>
    </div>

</main>
